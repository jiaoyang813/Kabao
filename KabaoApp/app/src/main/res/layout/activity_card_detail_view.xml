<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/appbackground"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/action_bar_carddetailview"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/black_transparent"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark"
        android:contentInsetLeft="0dp"
        android:contentInsetStart="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        android:contentInsetRight="0dp"
        android:contentInsetEnd="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetEnd="0dp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"
        android:layout_gravity="center"
        android:id="@+id/carddetail_cardimage"/>

    <View
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="1dp"
        android:background="@color/color_view_line"
        android:id="@+id/view" />

    <LinearLayout
        android:id="@+id/carddetail_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Card Detail"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/color_view_line" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/card_detail_tablerowheight"
                    android:layout_weight="3"
                    android:gravity="end"
                    android:text="Card Name:"
                    android:textColor="@color/white"
                    android:textSize="@dimen/card_detail_fontSize"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/carddetailview_cardname"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/card_detail_tablerowheight"
                    android:layout_marginStart="5dp"
                    android:layout_weight="7"
                    android:gravity="start"
                    android:textColor="@color/white"
                    android:textSize="@dimen/card_detail_fontSize" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/card_detail_tablerowheight"
                    android:layout_weight="3"
                    android:gravity="end"
                    android:text="Card No:"
                    android:textColor="@color/white"
                    android:textSize="@dimen/card_detail_fontSize"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/carddetailview_cardno"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/card_detail_tablerowheight"
                    android:layout_marginStart="5dp"
                    android:layout_weight="7"
                    android:gravity="start"
                    android:textColor="@color/white"
                    android:textSize="@dimen/card_detail_fontSize" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/card_detail_tablerowheight"
                    android:layout_weight="3"
                    android:gravity="end"
                    android:text="CCV:"
                    android:textColor="@color/white"
                    android:textSize="@dimen/card_detail_fontSize"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/carddetailview_ccv"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/card_detail_tablerowheight"
                    android:layout_marginStart="5dp"
                    android:layout_weight="7"
                    android:gravity="start"
                    android:textColor="@color/white"
                    android:textSize="@dimen/card_detail_fontSize" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/card_detail_tablerowheight"
                    android:layout_weight="3"
                    android:gravity="end"
                    android:text="Expired on:"
                    android:textColor="@color/white"
                    android:textSize="@dimen/card_detail_fontSize"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/carddetailview_expireddate"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/card_detail_tablerowheight"
                    android:layout_marginStart="5dp"
                    android:layout_weight="7"
                    android:gravity="start"
                    android:textColor="@color/white"
                    android:textSize="@dimen/card_detail_fontSize" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/card_detail_tablerowheight"
                    android:layout_weight="3"
                    android:gravity="end"
                    android:text="Statement Date:"
                    android:textColor="@color/white"
                    android:textSize="@dimen/card_detail_fontSize"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/carddetailview_stmtdate"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/card_detail_tablerowheight"
                    android:layout_marginStart="5dp"
                    android:layout_weight="7"
                    android:gravity="start"
                    android:textColor="@color/white"
                    android:textSize="@dimen/card_detail_fontSize" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/card_detail_tablerowheight"
                    android:layout_weight="3"
                    android:gravity="end"
                    android:text="Credit Line:"
                    android:textColor="@color/white"
                    android:textSize="@dimen/card_detail_fontSize"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/carddetailview_creditline"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/card_detail_tablerowheight"
                    android:layout_marginStart="5dp"
                    android:layout_weight="7"
                    android:gravity="start"
                    android:textColor="@color/white"
                    android:textSize="@dimen/card_detail_fontSize" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/card_detail_tablerowheight"
                    android:layout_weight="3"
                    android:gravity="end"
                    android:text="Bank:"
                    android:textColor="@color/white"
                    android:textSize="@dimen/card_detail_fontSize"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/carddetailview_bank"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/card_detail_tablerowheight"
                    android:layout_marginStart="5dp"
                    android:layout_weight="7"
                    android:gravity="start"
                    android:textColor="@color/white"
                    android:textSize="@dimen/card_detail_fontSize" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/card_detail_tablerowheight"
                    android:layout_weight="3"
                    android:gravity="end"
                    android:text="Note:"
                    android:textColor="@color/white"
                    android:textSize="@dimen/card_detail_fontSize"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/carddetailview_features"
                    android:layout_width="0dp"
                    android:layout_marginStart="5dp"
                    android:layout_weight="7"
                    android:gravity="start"
                    android:textColor="@color/white"
                    android:textSize="@dimen/card_detail_fontSize" />
            </TableRow>
        </TableLayout>

    </LinearLayout>

    <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView_detailview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-3940256099942544/6300978111">
        <!-- real ad unit id "ca-app-pub-9690495249654800/1172899921"-->
    </com.google.android.gms.ads.AdView>


</RelativeLayout>