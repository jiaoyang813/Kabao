<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/appbackground"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/action_bar_carddetailview"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/black_transparent"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark"
        android:contentInsetLeft="0dp"
        android:contentInsetStart="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        android:contentInsetRight="0dp"
        android:contentInsetEnd="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetEnd="0dp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"
        android:layout_gravity="center"
        android:id="@+id/carddetail_cardimage"/>

    <View
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="1dp"
        android:background="@color/color_view_line"
        />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp" >
    <TextView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Card Detail"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@color/white"/>
    <View
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="2dp"
        android:layout_height="1dp"
        android:background="@color/color_view_line"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="@dimen/card_detail_tablerowheight"
                android:textStyle="bold"
                android:textSize="@dimen/card_detail_fontSize"
                android:textColor="@color/white"
                android:gravity="end"
                android:text="Card Name:" />
            <TextView
                android:id="@+id/carddetailview_cardname"
                android:layout_width="0dp"
                android:layout_weight="7"
                android:layout_marginStart="5dp"
                android:layout_height="@dimen/card_detail_tablerowheight"
                android:textSize="@dimen/card_detail_fontSize"
                android:textColor="@color/white"
                android:gravity="start" />
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="@dimen/card_detail_tablerowheight"
                android:textStyle="bold"
                android:textSize="@dimen/card_detail_fontSize"
                android:textColor="@color/white"
                android:gravity="end"
                android:text="Card No:" />

            <TextView
                android:id="@+id/carddetailview_cardno"
                android:layout_width="0dp"
                android:layout_weight="7"
                android:layout_marginStart="5dp"
                android:layout_height="@dimen/card_detail_tablerowheight"
                android:textSize="@dimen/card_detail_fontSize"
                android:textColor="@color/white"
                android:gravity="start" />
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/card_detail_tablerowheight"
                android:layout_weight="3"
                android:textStyle="bold"
                android:textSize="@dimen/card_detail_fontSize"
                android:textColor="@color/white"
                android:gravity="end"
                android:text="CCV:" />

            <TextView
                android:id="@+id/carddetailview_ccv"
                android:layout_width="0dp"
                android:layout_height="@dimen/card_detail_tablerowheight"
                android:layout_weight="7"
                android:layout_marginStart="5dp"
                android:textSize="@dimen/card_detail_fontSize"
                android:textColor="@color/white"
                android:gravity="start" />
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/card_detail_tablerowheight"
                android:layout_weight="3"
                android:textStyle="bold"
                android:textSize="@dimen/card_detail_fontSize"
                android:textColor="@color/white"
                android:gravity="end"
                android:text="Expired on:" />

            <TextView
                android:id="@+id/carddetailview_expireddate"
                android:layout_width="0dp"
                android:layout_height="@dimen/card_detail_tablerowheight"
                android:layout_weight="7"
                android:layout_marginStart="5dp"
                android:textSize="@dimen/card_detail_fontSize"
                android:textColor="@color/white"
                android:gravity="start" />
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/card_detail_tablerowheight"
                android:layout_weight="3"
                android:textStyle="bold"
                android:textSize="@dimen/card_detail_fontSize"
                android:textColor="@color/white"
                android:gravity="end"
                android:text="Statement Date:" />

            <TextView
                android:id="@+id/carddetailview_stmtdate"
                android:layout_width="0dp"
                android:layout_height="@dimen/card_detail_tablerowheight"
                android:layout_weight="7"
                android:layout_marginStart="5dp"
                android:textSize="@dimen/card_detail_fontSize"
                android:textColor="@color/white"
                android:gravity="start" />
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/card_detail_tablerowheight"
                android:layout_weight="3"
                android:textStyle="bold"
                android:textSize="@dimen/card_detail_fontSize"
                android:textColor="@color/white"
                android:gravity="end"
                android:text="Credit Line:" />

            <TextView
                android:id="@+id/carddetailview_creditline"
                android:layout_width="0dp"
                android:layout_height="@dimen/card_detail_tablerowheight"
                android:layout_weight="7"
                android:layout_marginStart="5dp"
                android:textSize="@dimen/card_detail_fontSize"
                android:textColor="@color/white"
                android:gravity="start"/>
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/card_detail_tablerowheight"
                android:layout_weight="3"
                android:textSize="@dimen/card_detail_fontSize"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:gravity="end"
                android:text="Bank:" />

            <TextView
                android:id="@+id/carddetailview_bank"
                android:layout_width="0dp"
                android:layout_height="@dimen/card_detail_tablerowheight"
                android:layout_weight="7"
                android:layout_marginStart="5dp"
                android:textSize="@dimen/card_detail_fontSize"
                android:textColor="@color/white"
                android:gravity="start"  />
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/card_detail_tablerowheight"
                android:layout_weight="3"
                android:textStyle="bold"
                android:textSize="@dimen/card_detail_fontSize"
                android:textColor="@color/white"
                android:gravity="end"
                android:text="Note:" />

            <TextView
                android:id="@+id/carddetailview_features"
                android:layout_width="0dp"
                android:layout_marginStart="5dp"
                android:layout_weight="7"
                android:textSize="@dimen/card_detail_fontSize"
                android:textColor="@color/white"
                android:gravity="start" />
        </TableRow>
    </TableLayout>

</LinearLayout>


</LinearLayout>