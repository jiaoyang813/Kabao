<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/expandablelist_group_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:src="@drawable/chasebank"/>
    <TextView
        android:id="@+id/creditcardcompany_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_toRightOf="@id/expandablelist_group_image"
        android:layout_toEndOf="@id/expandablelist_group_image"
        android:textStyle="bold" />
</RelativeLayout>